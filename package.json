{
  "name": "@bechara/nestjs-orm",
  "version": "4.0.2",
  "description": "ORM Module Component for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-orm"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "dev": "pnpm mysql && tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./example/main.ts",
    "mysql": "docker run -d --rm -p 3306:3306 -e MYSQL_ROOT_PASSWORD=password -e MYSQL_DATABASE=nestjs-orm mysql",
    "build": "rimraf ./dist && pnpm run index && tsc -p tsconfig.build.json && rimraf ./source/index.ts",
    "index": "rimraf ./source/index.ts && barrelsby -q -e \\.spec\\.ts$ -e test -d ./source",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --config .config/jest/.jestrc.json"
  },
  "peerDependencies": {
    "@bechara/nestjs-core": "^4.10.0"
  },
  "dependencies": {
    "@mikro-orm/core": "4.5.10",
    "@mikro-orm/mongodb": "4.5.10",
    "@mikro-orm/mysql": "4.5.10",
    "@mikro-orm/nestjs": "4.3.1",
    "@mikro-orm/postgresql": "4.5.10"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.4.0",
    "@bechara/nestjs-core": "4.10.0",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.22",
    "barrelsby": "2.3.4",
    "eslint": "8.11.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.2"
  }
}
