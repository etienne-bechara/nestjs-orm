{
  "name": "@bechara/nestjs-orm",
  "version": "2.9.6",
  "description": "ORM Module Component for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-orm"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "start": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./source/test/test.main.ts",
    "build": "npx rimraf ./dist && pnpm run index && tsc -p tsconfig.build.json && npx ncp ./source ./dist/source && npx rimraf ./source/index.ts",
    "index": "npx rimraf ./source/index.ts && npx barrelsby -q -e \\.spec\\.ts$ -e test -d ./source",
    "lint": "eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --config .config/jest/jest.config.js"
  },
  "peerDependencies": {
    "@bechara/nestjs-core": "^2.0.0"
  },
  "dependencies": {
    "@mikro-orm/core": "4.5.7",
    "@mikro-orm/mongodb": "4.5.7",
    "@mikro-orm/mysql": "4.5.7",
    "@mikro-orm/nestjs": "4.2.0",
    "@mikro-orm/postgresql": "4.5.7",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "flat": "5.0.2",
    "rxjs": "7.1.0",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.1.5",
    "@bechara/nestjs-core": "2.3.7",
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@nestjs/testing": "7.6.18",
    "@types/jest": "26.0.23",
    "@types/node": "15.14.0",
    "eslint": "7.29.0",
    "husky": "7.0.0",
    "jest": "27.0.6",
    "lint-staged": "11.0.0",
    "ts-jest": "27.0.3",
    "ts-node-dev": "1.1.8",
    "typescript": "4.3.5"
  }
}
