{
  "name": "@bechara/nestjs-orm",
  "version": "3.7.3",
  "description": "ORM Module Component for NestJS Projects",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/nestjs-orm"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**"
  ],
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "prepare": "husky install .config/husky",
    "dev": "tsnd --exit-child --rs --watch *.env --inspect=0.0.0.0:9229 ./test/main.ts",
    "build": "pnpx -y rimraf ./dist && pnpm run index && tsc -p tsconfig.build.json && pnpx -y rimraf ./source/index.ts",
    "index": "pnpx -y rimraf ./source/index.ts && pnpx -y barrelsby -q -e \\.spec\\.ts$ -e test -d ./source",
    "lint": "export TIMING=1 || set TIMING=1&& eslint **/*.ts --max-warnings=0",
    "test": "jest --verbose --forceExit --passWithNoTests --config .config/jest/.jestrc.json"
  },
  "peerDependencies": {
    "@bechara/nestjs-core": "^3.4.0"
  },
  "dependencies": {
    "@mikro-orm/core": "4.5.9",
    "@mikro-orm/mongodb": "4.5.9",
    "@mikro-orm/mysql": "4.5.9",
    "@mikro-orm/nestjs": "4.3.1",
    "@mikro-orm/postgresql": "4.5.9",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@bechara/eslint-config-bechara-ts": "1.3.0",
    "@bechara/nestjs-core": "3.4.0",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.12",
    "eslint": "8.4.1",
    "husky": "7.0.4",
    "jest": "27.4.4",
    "ts-jest": "27.1.1",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.3"
  }
}
